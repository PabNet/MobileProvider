@model IEnumerable<MobileProviderSystem.Models.Entities.User>
@{
    ViewData["Title"] = "Панель администратора";
}

<link rel="stylesheet" href="~/css/contactsStyle.css">
<link rel="stylesheet" href="~/css/adminPanelStyle.css">
<script src="~/js/adminPanelFunction.js"></script>

<table id="Table">

    <caption><h2>Пользователи приложения</h2></caption>

    <thead>
    
    <tr>
        <th>ФИО</th>
        <th>Hомер телефона</th>
        <th>Электронная почта</th>
        <th>Роль</th>
    </tr>
    
    </thead>

    <tbody>
    
    @foreach (var user in Model)
    {
        <tr class="Data" id="@user.Id">
            <td>@user.Fio</td>
            <td>@("+375")@user.PhoneNumber</td>
            <td>@user.Email</td>
            <td id="@user.AccountId">
                <select>
                    @foreach (var role in ViewBag.Roles)
                    {
                        <option @(user.Account.Role.RoleName.Contains(role) ? "checked=\"checked\"" : "") value="@role">@role</option>
                    }
                </select>
            </td>
        </tr>
    }

    </tbody>

</table>

<div id="AdditionalTask" class="Modal">
        <div id="AdditionalTaskModal">
            <h2>Удалить запись?</h2>
            <span id="Yes">Да</span>
            <span id="No">Нет</span>
        </div>
    </div>
    